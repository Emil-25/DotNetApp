@model List<Company>

<div class="container">
    <div class="row pt-3 pb-3">
        <div class="col-6">
            <h1>Company List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Company</a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
                 