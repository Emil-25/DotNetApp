@model ProductVM

<div class="card shadow border-8 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-8 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="Product.Id" hidden />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Title" class="form-control border-8 shadow" />
                    <label asp-for="Product.Title"></label>
                    <span class="text-danger" asp-validation-for="Product.Title"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Description" class="form-control border-8 shadow" />
                    <label asp-for="Product.Description"></label>
                    <span class="text-danger" asp-validation-for="Product.Description"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.ISBN" class="form-control border-8 shadow" />
                    <label asp-for="Product.ISBN"></label>
                    <span class="text-danger" asp-validation-for="Product.ISBN"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Author" class="form-control border-8 shadow" />
                    <label asp-for="Product.Author"></label>
                    <span class="text-danger" asp-validation-for="Product.Author"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.ListPrice" class="form-control border-8 shadow" />
                    <label asp-for="Product.ListPrice"></label>
                    <span class="text-danger" asp-validation-for="Product.ListPrice"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price" class="form-control border-8 shadow" />
                    <label asp-for="Product.Price"></label>
                    <span class="text-danger" asp-validation-for="Product.Price"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price50" class="form-control border-8 shadow" />
                    <label asp-for="Product.Price50"></label>
                    <span class="text-danger" asp-validation-for="Product.Price50"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price100" class="form-control border-8 shadow" />
                    <label asp-for="Product.Price100"></label>
                    <span class="text-danger" asp-validation-for="Product.Price100"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-8 shadow">
                       <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="Product.CategoryId"></label>
                    <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.ImageUrl" class="form-control border-8 shadow" />
                    <label asp-for="Product.ImageUrl"></label>
                    <span class="text-danger" asp-validation-for="Product.ImageUrl"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}