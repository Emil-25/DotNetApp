@model Product

<div class="card shadow border-8 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-8 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-8 shadow" />
                    <label asp-for="Title"></label>
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-8 shadow" />
                    <label asp-for="Description"></label>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-8 shadow" />
                    <label asp-for="ISBN"></label>
                    <span class="text-danger" asp-validation-for="ISBN"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-8 shadow" />
                    <label asp-for="Author"></label>
                    <span class="text-danger" asp-validation-for="Author"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-8 shadow" />
                    <label asp-for="ListPrice"></label>
                    <span class="text-danger" asp-validation-for="ListPrice"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-8 shadow" />
                    <label asp-for="Price"></label>
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-8 shadow" />
                    <label asp-for="Price50"></label>
                    <span class="text-danger" asp-validation-for="Price50"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-8 shadow" />
                    <label asp-for="Price100"></label>
                    <span class="text-danger" asp-validation-for="Price100"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}